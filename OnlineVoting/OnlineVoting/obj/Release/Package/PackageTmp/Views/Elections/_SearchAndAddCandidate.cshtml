        @Scripts.Render("~/bundles/jqueryval")

        <script type="text/javascript">

            var onSuccess = function doIt(result)
            {
                if (result.ok) {
                    window.location.href = result.url;
                }
            };

            $(function () {

                $("#SearchText").autocomplete({
                    source: '@Url.Action("GetNameSearch")'
                });

            });


        </script>

    }
