@model IEnumerable<OnlineVoting.Models.ElectionRankView>

@{
    ViewBag.Title = "ShowResults";
}

<h2>ShowResults</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Back To All Results", "Index", "Votings", new { @class = "btn btn-default" })
    </p>
}
else
{
    <p>
        @Html.ActionLink("Back To All Results", "Results", "Votings", new { @class = "btn btn-default" })
    </p>
}


<p>
    @Html.DisplayNameFor(model => model.Electionname) : @ViewBag.NameOfElection
</p>
<p>
    @Html.DisplayNameFor(model => model.State) : @ViewBag.StateOfElection
</p>
<p>
    The Winner Is : @ViewBag.WinnerOfElection
</p>
<p>
    Number of votes : @ViewBag.NumberOfVotes
    </p>

    <table class="table" id="ShowResults">
        <tr id ="hide">


            <th>
                @Html.DisplayNameFor(model => model.Candidate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.QuantityVotes)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Candidate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityVotes)
                </td>

            </tr>
        }

    </table>
